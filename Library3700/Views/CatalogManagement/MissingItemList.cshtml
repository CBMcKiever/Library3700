@model Library3700.Models.ViewModels.ItemStatusViewModel
@{
    ViewBag.Title = "MissingItemList";
}
<br />
@Html.ActionLink("< Back", "Home", "AccountManagement")
<br />
<h2>Missing Item List</h2>
<br />
<div>
    @if (Model.MissingItemList == null || Model.MissingItemList.Count() == 0)
    {
        <h3>There are no missing items.</h3>
    }
    else
    {
        <table class="table" id="itemTable">
            <thead>
                <tr>
                    <th scope="col">Title</th>
                    <th scope="col">Author</th>
                    <th scope="col">Genre</th>
                    <th scope="col">Published</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.MissingItemList)
                {
                    <tr data-item-id=@item.ItemId>
                        <td>@item.Title</td>
                        <td>@item.Author</td>
                        <td>@item.Genre</td>
                        <td>@item.PublicationYear</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
